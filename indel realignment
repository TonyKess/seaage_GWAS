
#If no dictionary created, do
#java -jar $EBROOTPICARD/picard.jar CreateSequenceDictionary R=/home/tkess/scratch/Salmon_Brian_genome/Brian_pilon_CHR.fasta O=/home/tkess/scratch/Salmon_Brian_genome/Brian_pilon_CHR.dict

#get to realigning
ls *.deDup.bam | \
  sed 's/.deDup.bam$//' | \
  parallel --jobs 32 \
  'java -Xmx6g -jar $EBROOTGATK/GenomeAnalysisTK.jar \
  -T RealignerTargetCreator \
  -R /home/tkess/scratch/Salmon_Brian_genome/Brian_pilon_CHR.fasta \
  -I {}.deDup.bam \
  -o {}.intervals'

ls *.deDup.bam | \
  sed 's/.deDup.bam$//' | \
  parallel --jobs 10 \
 'java -Xmx10G -jar $EBROOTGATK/GenomeAnalysisTK.jar \
 -T IndelRealigner \
 -R /home/tkess/scratch/Salmon_Brian_genome/Brian_pilon_CHR.fasta \
 -I {}.deDup.bam  \
 -targetIntervals {}.intervals \
 -o {}.realigned.bam'

